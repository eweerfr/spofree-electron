{
  "name": "spofree-player",
  "productName": "SPOFREE Music Player",
  "version": "1.2.0",
  "description": "SPOFREE desktop music player",
  "main": "main.js",
  "author": "eweerfr",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.spofree.musicplayer",
    "productName": "SPOFREE Music Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": ["nsis", "zip"],
      "icon": "assets/app.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^26.7.0"
  }
}